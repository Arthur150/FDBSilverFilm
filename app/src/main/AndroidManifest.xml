<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fdbsilverfilm" >


    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.CAMERA" />


    <application
        android:screenOrientation="portrait"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_fdb_silverfilm"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_fdb_silverfilm_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FDBSilverFilm" >

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:screenOrientation="portrait"
            android:name=".view.AddPictureActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".view.PicturesListActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".view.FilmListActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".view.AddFilmActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".view.PictureDetailsActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".view.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>